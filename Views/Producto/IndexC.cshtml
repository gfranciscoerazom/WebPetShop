<!DOCTYPE html>
<html>
<head>
    <title>Pet Shop - Productos</title>
    <style>
        /* Estilos globales */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Estilos de la ventana de productos */
        .product-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            align-items: flex-start;
            /*max-width: 800px;*/
            margin: 20px auto;
        }

        .product-item {
            flex-basis: 300px;
            margin: 10px;
            padding: 20px;
            background-color: #f0f0f0;
            border: 2px solid #ccc;
            text-align: center;
        }

        .product-image {
            width: 100%;
            height: auto;
            margin-bottom: 10px;
        }

        .product-quantity{
            font-weight: bold;
        }

        .product-sales {
            font-weight: bold;
        }

        .product-name {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .product-description {
            margin-bottom: 10px;
        }

        .product-price {
            font-weight: bold;
        }

        .product-add-to-cart {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="card1">
        <div class="card1-body">
            <!--<a asp-action="Producto" asp-controller="Producto" asp-route-idProducto="0" class="btn btn-success btn-sm">Nuevo Producto</a>-->
        
            <div class="product-container">

                @foreach (var item in Model)
                {
                    <div class="product-item">
                            <img src=@item.Imagen alt=@item.ProductoId class="product-image">
                            <h3 class="mb-2">@item.Nombre</h3>
                            <p class="mb-2">@item.ProductoId</p>
                            <p class="mb-2">@item.Descripcion</p>
                            <p class="mb-2">@item.Precio</p>
                            <button onclick="addToCart(@item.Imagen, @item.ProductoId, @item.Nombre, @item.Descripcion, @item.Precio)">Agregar al Carrito</button>
                    </div>
                }
                </div>
        </div>
    </div>
</body>
</html>
